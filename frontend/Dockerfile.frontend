# frontend/Dockerfile
# build stage
FROM node:18-alpine AS build
WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci
COPY frontend/ .
# build (Angular)
RUN npm run build -- --configuration production

# runtime stage
FROM nginx:stable-alpine
# Copy built files â€” adjust the dist path if your app produces dist/<name>
COPY --from=build /app/dist/ /usr/share/nginx/html/
# Remove default nginx conf if you want to use your own
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
